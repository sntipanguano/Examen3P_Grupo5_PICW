    .header {
        background-color: whitesmoke; /* Cambia el color de fondo según tu diseño */
        padding: 20px;
        text-align: center;
    }
    
    .header img {
        max-width: 90px; /* Ajusta el tamaño máximo de la imagen */
    }
    
    /* Estilos adicionales para la barra de navegación, si es necesario */
    .navbar {
        background-color: #5dc;
        padding: 10px;
        display: flex;
        justify-content: center; /* Centra horizontalmente el contenido */
        align-items: center; /* Centra verticalmente el contenido */
    }
    
    .navbar a {
        color: white;
        text-decoration: none;
        margin: 0 30px; /* Espaciado entre los enlaces */
        font-family: 'Lucida Bright';
    }

    .navbar a {
        font-size: 18px;
        color: #333;
        transition: color 0.3s; /* Agrega una transición suave al cambio de color */
    }

    .navbar a:hover {
        color: #ff9900; /* Cambia el color al pasar el cursor */
    }
    
